<UserControl
    x:Class="Library.Wpf.Controls.LabeledControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Library.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Me"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.RowSpan="1" Background="{Binding ElementName=Me, Path=LineColor}" />
        <TextBlock Grid.Column="1" Text="{Binding ElementName=Me, Path=Caption}" Style="{StaticResource }"/>
        <ContentControl
            Grid.Row="1"
            Grid.Column="1"
            Content="{Binding ElementName=Me, Path=Client}" />

    </Grid>
</UserControl>
